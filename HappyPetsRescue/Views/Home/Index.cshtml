@model IEnumerable<HappyPetsRescue.Models.AdoptedPet>

@*@{
    ViewBag.Title = "Home Page";
}*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <style>
        #about {
            width: 100%;
            height: auto;
            background: #f7f7f7;
            padding-top: 120px;
        }

            #about .div-img-bg {
                padding-bottom: 30px;
                border: 20px solid #6F4914;
            }

                #about .div-img-bg .about-img img {
                    width: 100%;
                    box-shadow: 0px 0px 85px 0px rgba(0, 0, 0, 0.14);
                    margin-top: -60px;
                    margin-left: 40px;
                    height: 400px;
                    -o-object-fit: cover;
                    object-fit: cover;
                }

            #about .about-descr .p-heading {
                font-family: "Playfair Display", serif;
                font-size: 28px;
                text-align: left;
            }

            #about .about-descr .separator {
                max-width: 80%;
                margin-bottom: 0;
                text-align: left;
            }

        h1 {
            color: #6F4914;
        }

        li {
            padding: 0px;
            margin: 1px;
            font-family: Calibri;
        }

        p {
            padding: 0px;
            margin: 1px;
            font-family: Calibri;
        }

        button {
            font-size: 16px;
            position: relative;
            margin: auto;
            padding: 1em 2.5em 1em 2.5em;
            border: none;
            background: Black;
            transition: all 0.1s linear;
            box-shadow: 10px 5px 5px #6F4914;
        }

            button:active {
                transform: scale(0.95);
            }

            button span {
                color: white;
                font-weight: bold;
            }

            button .border {
                position: absolute;
                border: 0.15em solid #f7f7f7;
                transition: all 0.3s 0.08s linear;
                top: 50%;
                left: 50%;
                width: 3em;
                height: 3em;
                transform: translate(-50%, -50%);
            }

            button:hover .border {
                display: block;
                width: 10.7em;
                height: 3.8em;
            }

        .full-rounded {
            border-radius: 2em;
        }
    </style>

</head>
<body>
    <div id="about" class="paddsection">
        <div class="container-fluid">
            <div class="row justify-content-between">

                <div class="col-lg-4 ">
                    <div class="div-img-bg">
                        <div class="about-img">
                            <img src="~/Images/dogcat.jpg" class="img-responsive" alt="me">
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="about-descr">
                        <h1 style="font-family: Brush Script MT, cursive;"><b>Everyone needs a companion! Find yours NOW!!!</b></h1>
                        <div class="row">
                            <div class="col">
                                <h2 style="font-family:Calibri"><b>@Model.Count()   ADOPTED PETS</b></h2>
                            </div>
                        </div>
                        <hr />
                        @if (Model.Count() > 0)
                        {
                            <ul>
                                @foreach (var modelItem in Model)
                                {
                                    <li>@modelItem.Pet.PetName has been adopted by @modelItem.User.UserFullName</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>There are currently no pets that have been adopted!</p>
                        }

                        <p style="text-align:justify">
                            Happy Pets Rescue serves to connect pets put up for adoption to find their new companion and forever home.
                            We currently specialise in dogs, cats, birds and fish and we hope to grow in the future.
                            We are accessible nation wide and we aim to make connections happen through out the country.
                        </p>
                        <hr />
                        <button onclick="location.href='@Url.Action("PetPage","Pet")'" class="full-rounded">
                            <span>View Pets</span>
                            <div class="border full-rounded"></div>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
